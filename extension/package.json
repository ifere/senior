{
  "publisher": "senior",
  "name": "senior",
  "displayName": "Senior",
  "description": "AI pair programmer: explains diffs, blast radius, and fix paths",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "senior.explainLastChange",
        "title": "Senior: Explain Last Change"
      },
      {
        "command": "senior.showPanel",
        "title": "Senior: Show Impact Panel"
      }
    ],
    "configuration": {
      "title": "Senior",
      "properties": {
        "senior.daemonPath": {
          "type": "string",
          "default": "",
          "description": "Path to senior-daemon binary. Defaults to daemon/target/release/senior-daemon in workspace."
        },
        "senior.modelPath": {
          "type": "string",
          "default": "",
          "description": "Path to model weights directory for Cactus LLM."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./ && cp src/ui/panel.html out/ui/panel.html",
    "watch": "tsc -watch -p ./ && cp src/ui/panel.html out/ui/panel.html",
    "package": "vsce package --allow-missing-repository",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
