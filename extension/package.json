{
  "publisher": "senior",
  "name": "senior",
  "displayName": "Senior",
  "description": "AI pair programmer: explains diffs, blast radius, and fix paths",
  "version": "0.0.1",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "senior.explainLastChange",
        "title": "Senior: Explain Last Change"
      },
      {
        "command": "senior.showPanel",
        "title": "Senior: Show Impact Panel"
      }
    ],
    "configuration": {
      "title": "Senior",
      "properties": {
        "senior.daemonPath": {
          "type": "string",
          "default": "",
          "description": "Path to senior-daemon binary. Defaults to daemon/target/release/senior-daemon in workspace."
        },
        "senior.modelPath": {
          "type": "string",
          "default": "",
          "description": "Path to model weights directory for Cactus LLM."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
